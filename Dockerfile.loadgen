# Dockerfile for MoniFlux Load Generator
FROM golang:1.20-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN go build -o bin/loadgen cmd/loadgen/main.go

FROM alpine:latest

WORKDIR /app

COPY --from=builder /app/bin/loadgen .

COPY configs/config.yaml ./configs/

EXPOSE 9098

CMD ["./loadgen"]
